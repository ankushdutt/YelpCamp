<%- include('../partials/header') %>
<div class="container">
    <h1>Edit <%=campground.name%> </h1>
    <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="cmp[name]" value="<%=campground.name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="cmp[image]" value="<%=campground.image%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="cmp[description]" value="<%=campground.description%>">
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include('../partials/footer') %>
